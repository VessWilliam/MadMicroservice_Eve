@model UserRegisterDTO


<form method="post">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-denger"/>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-denger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-denger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-denger" />
            </div> 
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <button type="submit" class="form-control btn btn-outline-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>